<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
   <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 自定义Theme -->
    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/CustomActionButtonOverflowStyle</item>
        <item name="android:actionButtonStyle">@style/CustomActionButtonStyle</item>
    </style>

    <!-- overflow图标 -->
    <style name="CustomActionButtonOverflowStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/mz_ic_sb_more</item>
    </style>

    <!-- back键图标 通过style定制back方法只在flyme4.0系统有效 -->
    <style name="CustomActionButtonStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionButton">
        <item name="android:src">@drawable/mz_ic_sb_back</item>
    </style>

    <!-- smartbar及actionbar顶栏背景 -->
    <style name="CustomActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@drawable/mz_titlebar_background</item>
        <item name="android:backgroundSplit">@drawable/mz_smartbar_background</item>
    </style>

    <!-- titlebar背景样式配置 -->
    <style name="top_bg_style">
        <item name="android:background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
    </style>

    <!-- 返回按钮 -->
    <style name="actionbar_back">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/btn_back_selector</item>
    </style>

    <!-- actionbar标题 -->
    <style name="page_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <!-- *********************字体风格 ********************** -->

    <!-- 白色 -->
    <style name="white_font_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>
    
    <style name="white_font_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="white_font_18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="white_font_16_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="white_font_18_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="white_font_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/font_white</item>
    </style>

    <!-- 黑色 -->

    <style name="black_font_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fontcolor</item>
    </style>

    <!-- 绿色 -->

    <style name="green_font_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="grey_font_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- *********************按钮 ***************************** -->
    <style name="btn_green">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/green_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:padding">@dimen/common_padding</item>
    </style>
    <style name="btn_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:background">@drawable/blue_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>